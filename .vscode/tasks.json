{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ compiling",
            "command": "/usr/bin/g++",
            "args": [
                "-Zi",
                "-Fe",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Vom Debugger generierte Aufgabe."
        },
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "args": [
                "all"
            ]
        },
        {
            "type": "shell",
            "label": "make_clean",
            "command": "make",
            "args": [
                "clean"
            ]
        },
        {
            "type": "shell",
            "label": "make_docu",
            "command": "make",
            "args": [
                "docu"
            ]
        },
                {
            "type": "shell",
            "label": "shell_build",
            "command": "./build.sh"
        }
    ],
    "version": "2.0.0"
}